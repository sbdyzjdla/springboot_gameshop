{{>layout/header}}
<!-- breadcrumb part start-->
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>상세보기</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<!--================Single Product Area =================-->
<div class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="single_product_text text-center">
                    <div class="feature-img">
                        <img class="img-fluid" src="/display/{{dto.img_num}}" alt="">
                    </div>
                    <div class="card_area">
                        <div class="product_count_area">
                            <p><strong>수량</strong></p>
                            <div class="product_count d-inline-block">
                                <span class="product_count_item inumber-decrement"> <i class="ti-minus"></i></span>
                                <input class="product_count_item input-number" id ="p_quantity" type="text" value="1" min="1" max="{{dto.quantity}}">
                                <span class="product_count_item number-increment"> <i class="ti-plus"></i></span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title"><strong>{{dto.p_name}}</strong></h4>
                        <ul class="list cat-list">
                            <li>
                                <a href="#" class="d-flex" id="console_manage_bt">
                                    <p><strong>판매가격 : </strong></p>
                                    <p>{{dto.p_price}}</p>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="d-flex" id="console_manage_bt">
                                    <p><strong>배송비 : </strong></p>
                                    <p>2,500원</p>
                                </a>
                            </li>
                            <li>
                                <a class="btn_1" href="#" id="add_cart" >장바구니</a>
                                <a class="btn_1" href="#" >바로구매</a>
                            </li>
                        </ul>
                    </aside>
                    <input type="hidden" id="id" value="{{dto.id}}"></input>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->
<!-- subscribe part end -->

{{>layout/footer}}
<script src="/js/cart.js"></script>