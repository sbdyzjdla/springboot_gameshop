{{>layout/header}}

<!-- breadcrumb part start-->
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>주문 상세정보</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->

<!--================Cart Area =================-->
<section class="cart_area section_padding">
    <div class="container">
        <div class="cart_inner">
            <h3 class="text-heading">주문상세정보</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">상품주문번호</th>
                    <th scope="col">상품정보</th>
                    <th scope="col">상품수량</th>
                    <th scope="col">상품금액</th>
                </tr>
                </thead>
                <tbody id="orderDetailBody">
                {{#orderDetailList}}
                    <tr name="orderList">
                        <td>
                            <h5>{{order_detail_id}}</h5>
                        </td>
                        <td>
                            <div class="media">
                                <div class="d-flex">
                                    <img src="/display/{{img_num}}" alt="" />
                                </div>
                                <div class="media-body">
                                    <p>{{p_name}}</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <h5>{{quantity}}개</h5>
                        </td>
                        <td>
                            <h5>{{orderPrice}}원</h5>
                        </td>
                    </tr>
                {{/orderDetailList}}
                </tbody>
            </table>

            {{#order_confirm}}
            <section class="confirmation_part">
                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>주문자 정보</h4>
                        <ul>
                            <li>
                                <p>주문번호</p><span>: {{order_id}}</span>
                            </li>
                            <li>
                                <p>이름</p><span>: {{order_name}}</span>
                            </li>
                            <li>
                                <p>전화번호</p><span>: {{phone_first}}-{{phone_second}}-{{phone_third}}</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>배송지 정보</h4>
                        <ul>
                            <li>
                                <p>우편번호</p><span>: {{postcode}}</span>
                            </li>
                            <li>
                                <p>주소</p><span>: {{address}}</span>
                            </li>
                            <li>
                                <p>상세주소</p><span>: {{detail_address}}</span>
                            </li>
                            <li>
                                <p>참고항목</p><span>: {{extra_address}}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
            {{/order_confirm}}
    </div>
</section>
<!--================End Cart Area =================-->
{{>layout/footer}}
<!-- -->