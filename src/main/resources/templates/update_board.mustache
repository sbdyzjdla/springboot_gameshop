{{>layout/header}}

<!-- breadcrumb part start-->
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Q&A(수정)</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->
<div class="container box_1170">
    <div class="section-top-border">
        <h3 class="mb-30">문의사항</h3>
        <div class="col-sm-6">
            <ul class="blog-info-link mt-3 mb-4">
                <li><a href="#"><i class="far fa-user"></i> {{qnas.author}} </a></li>
            </ul>
        </div>
        <form class="form-contact comment_form" action="#" id="commentForm">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <input class="form-control" name="title" id="title" type="text" placeholder="제목" value="{{qnas.title}}">
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <textarea class="form-control w-100" name="content" id="content" cols="30" rows="9" placeholder="내용" >{{qnas.content}}</textarea>
                    </div>
                    <input type = "file" name = "qnas_img"
                           accept = "image/*" onchange="setThumbnail(event);" />
                    <div id="image_container" class="col-md-3"></div>
                </div>
                <input type="hidden" id="id" value="{{qnas.id}}"></input>


            </div>
            <div class="form-group mt-3">
                <a href="#" class="genric-btn info radius" id="qna-update">수정</a>
                <a href="#" class="genric-btn danger radius" id="qna-cancel" onclick="qnas.listInit();">취소</a>
            </div>
        </form>
    </div>
</div>
<script>
function setThumbnail(event) {
    var reader = new FileReader();
    reader.onload = function(event) {
        var img = document.createElement("img");
        img.setAttribute("src", event.target.result);
        document.querySelector("div#image_container").appendChild(img); };
        reader.readAsDataURL(event.target.files[0]);
    }
</script>

{{>layout/footer}}