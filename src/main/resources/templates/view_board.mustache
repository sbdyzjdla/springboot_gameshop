{{>layout/header}}

<!-- breadcrumb part start-->
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>Q&A</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->
<section class="blog_area single-post-area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post">
                    <h2 id="qnasViewTitle">{{qnas.title}}</h2>
                    <h4>관리자 {{qnas.reply_state}} </h4>

                    <div class="blog_details">

                        <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="far fa-user"></i> {{qnas.author}} </a></li>
                            <li><a href="#"><i class="far fa-comments"></i> 1개의 댓글</a></li>
                        </ul>
                        <div class="feature-img">
                            <img class="img-fluid" src="/display/{{qnas.img_num}}" alt="">
                        </div>
                        <p class="excert">
                            {{qnas.content}}
                        </p>
                        <input type="hidden" id="id" value="{{qnas.id}}"></input>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
<div class="container box_1170">
<div class="button-group-area mt-40">
    <a href="/board/update_board/{{qnas.id}}" class="genric-btn info radius" >수정</a>
    <a href="#" class="genric-btn danger radius" id="qna-delete">삭제</a>
    <a href="/board/1" class="genric-btn primary radius" >목록</a>
</div>
<!-- comments -->
<div class="comments-area">
    <h4>1개의 댓글</h4>
    <div class="comment-list">
        <div class="single-comment justify-content-between d-flex">
            <div class="user justify-content-between d-flex">
                <div class="thumb">
                    <img src="/img/comment/comment_1.png" alt="">
                </div>
                <div class="desc">
                    <p class="comment">
                        Multiply sea night grass fourth day sea lesser rule open subdue female fill which them
                        Blessed, give fill lesser bearing multiply sea night grass fourth day sea lesser
                    </p>
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <h5>
                                <a href="#">Emilly Blunt</a>
                            </h5>
                            <p class="date">December 4, 2017 at 3:12 pm </p>
                        </div>
                        <div class="reply-btn">
                            <a href="#" class="btn-reply text-uppercase">reply</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- //comments -->

</div>
{{#userInfo}}
<!-- reply comments -->
<div class="comment-form" id="qnasReply">
    <h4>댓글 작성</h4>
    <form class="form-contact comment_form" action="#" id="commentForm">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <textarea class="form-control w-100" name="comment" id="comment" cols="30" rows="9" placeholder="댓글을 작성하세요"></textarea>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <a href="#" class="btn_3 button-contactForm" onclick="qnas.commentSave();">등록</a>
        </div>
    </form>
    <input type="hidden" id="userId" value="{{id}}">
</div>
{{/userInfo}}
<!-- //reply comments -->
</div>
{{>layout/footer}}