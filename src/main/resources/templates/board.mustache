{{>layout/header}}

    <!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>묻고 답하기</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
	<!-- breadcrumb part end-->
<div class="container box_1170">
<div class="section-top-border">
    <h3 class="mb-30">게시글</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th style="width: 10%; color: #795376 !important;" scope="col">번호</th>
            <th style="width: 10%; color: #795376 !important;" scope="col">답변상태</th>
            <th style="width: 60%; color: #795376 !important;" scope="col">제목/상품</th>
            <th style="width: 10%; color: #795376 !important;" scope="col">작성자</th>
            <th style="width: 10%; color: #795376 !important;" scope="col">작성일</th>
        </tr>
        </thead>
        <tbody id="qnasTable">
        {{#qnasList}}
            <tr onclick="qnas.viewInit({{id}})">
                <td>{{id}}</th>
                <td>{{reply_state}}</td>
                <td>{{title}}</td>
                <td>{{author}}</td>
                <td>{{createdDate}}</td>
            </tr>
        {{/qnasList}}
        </tbody>
    </table>
    <div class="mr-5 float-right">
        <a href="/board/write_board" class="genric-btn primary radius">글쓰기</a>
    </div>
    <nav class="blog-pagination justify-content-center d-flex">
        <ul class="pagination">
            <li class="page-item">
                <a href="/board/1" class="page-link" aria-label="Previous">
                    <i class="ti-angle-double-left"></i>
                </a>
            </li>
            {{#prev}}
            <li class="page-item">
                <a href="/board/{{prev}}" class="page-link">이전</a>
            </li>
            {{/prev}}
            {{#next}}
            <li class="page-item">
                <a href="/board/{{next}}" class="page-link">다음</a>
            </li>
            {{/next}}
            <li class="page-item">
                <a href="/board/{{last}}" class="page-link" aria-label="Next">
                    <i class="ti-angle-double-right"></i>
                </a>
            </li>
        </ul>
    </nav>

</div>
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="" onfocus="this.placeholder = ''" onblur="this.placeholder = '게시물 검색'" style="height:auto">
                    <div class="input-group-append">
                        <a href="#" class="genric-btn primary">검색</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

