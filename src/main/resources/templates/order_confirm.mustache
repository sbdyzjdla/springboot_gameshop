{{>layout/header}}

<!-- breadcrumb part start-->
<section class="breadcrumb_part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <h2>주문내역</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb part end-->

<!--================Cart Area =================-->
<section class="cart_area section_padding">
    <div class="container">
        <div class="cart_inner">
            <h3 class="text-heading">주문내역</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">주문번호</th>
                    <th scope="col">주문정보</th>
                    <th scope="col">주문금액</th>
                    <th scope="col">주문일자</th>
                    <th scope="col">주문상태</th>
                </tr>
                </thead>
                <tbody id="orderBody">
                {{#orderList}}
                    <tr name="orderList">
                        <td>
                            <h5>{{id}}</h5>
                        </td>
                        <td>
                            <div class="media">
                                <div class="d-flex">
                                    <img src="/display/{{order_img}}" alt="" />
                                </div>
                                <div class="media-body">
                                    <p>
                                        <a class="nav-link" href="/order/confirm/detail/{{id}}">{{order_title}}</a></p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <h5>{{order_price}}원</h5>
                        </td>
                        <td>
                            <h5>{{modified_date}}</h5>
                        </td>
                        <td>
                            <h5>{{order_status}}</h5>
                        </td>
                    </tr>
                {{/orderList}}
                </tbody>
            </table>
    </div>
</section>
<!--================End Cart Area =================-->
{{>layout/footer}}
